<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.example.gabriel.ondeestacionei.MainActivity">

    <TextView
        android:id="@+id/currentPositionTitleTextView"
        android:text="@string/current_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/currentLongitudeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/longitude"
        android:layout_below="@+id/currentLatitudeTitleTextView"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/longitudadeTextView"
        android:text="3.456"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/currentLongitudeTitleTextView"
        android:layout_alignBottom="@+id/currentLongitudeTitleTextView"
        android:layout_alignLeft="@+id/latitudeTextView"
        android:layout_alignStart="@+id/latitudeTextView" />

    <TextView
        android:id="@+id/currentLatitudeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/latitude"
        android:layout_below="@+id/currentPositionTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/latitudeTextView"
        android:text="10.456"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/currentLatitudeTitleTextView"
        android:layout_alignBottom="@+id/currentLatitudeTitleTextView"
        android:layout_toRightOf="@+id/currentLatitudeTitleTextView"
        android:layout_toEndOf="@+id/currentLatitudeTitleTextView"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="Posição Anterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentLongitudeTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/previousPositionTitleTextView" />

    <TextView
        android:text="@string/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/previousPositionTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:id="@+id/previousLatitudeTitleTextView" />

    <TextView
        android:text="@string/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previousLongitudeTitleTextView"
        android:layout_below="@+id/previousLatitudeTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="0f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/previousLongitudeTitleTextView"
        android:layout_alignLeft="@+id/longitudadeTextView"
        android:layout_alignStart="@+id/longitudadeTextView"
        android:id="@+id/previousLatitudeTextView" />

    <TextView
        android:text="0f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/previousLongitudeTitleTextView"
        android:layout_alignLeft="@+id/previousLatitudeTextView"
        android:layout_alignStart="@+id/previousLatitudeTextView"
        android:id="@+id/previousLongitudeTextView" />

    <Button
        android:text="@string/save"
        android:id="@+id/handlePositionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
